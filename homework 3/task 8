
def pisnia(a=3,b=3,c=0,line="la"):
    line=(line+'-')*b
    line=line[:-1]
    line = (line + '\n') * a
    line = line[:-1]
    if c==0:
        return line + "."
    elif c==1:
        return line + "!"
    else:
        return line

a=int(input('a: '))
b=int(input('b: '))
c=int(input('c: '))
print(pisnia(a,b,c))




