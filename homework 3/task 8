
def pisnia(a=3,b=3,c=0,line="la"):
    line=(line+'-')*b
    line=line[:-1]
    line = (line + '\n') * a
    line = line[:-1]
    if c==0:
        print(line, end=".")
    elif c==1:
        print(line, end="!")
    else:
        print(line)
    return 0
a=int(input('a: '))
b=int(input('b: '))
c=int(input('c: '))
pisnia(a,b,c)




